<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_backs"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment_Insurer_options">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="20dp"
                android:elevation="1dp"
                android:layout_margin="5dp"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/company_image"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/insurer_name"
                android:layout_width="wrap_content"
                android:text="NHIF insurance."
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/make_claim_card"
                android:layout_width="match_parent"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="5dp"
                app:cardElevation="1dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="15dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="17sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_height="wrap_content"
                            android:text="Make an insurance claim." />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            android:text="Make an insurance claim to the company." />

                    </LinearLayout>


                    <ImageView
                        android:layout_width="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/next_icon"
                        android:layout_height="17dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/pay_contribution_card"
                android:layout_width="match_parent"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="10dp"
                app:cardElevation="1dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="15dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="17sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_height="wrap_content"
                            android:text="Pay contribution." />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            android:text="Make your monthly premium payment." />

                    </LinearLayout>


                    <ImageView
                        android:layout_width="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/next_icon"
                        android:layout_height="17dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>