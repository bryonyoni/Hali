<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/fragment_backs"
    android:layout_height="match_parent"
    tools:context=".Fragment_make_claim">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Make Claim."
                    android:textSize="25sp"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/finish_textview"
                    android:layout_width="wrap_content"
                    android:text="Finish."
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <EditText
                android:id="@+id/first_nameEditText"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:textColorHint="@color/hint_color"
                android:textSize="14sp"
                android:ems="10"
                android:inputType="textPersonName|textCapSentences"
                android:hint="First Name" />

            <EditText
                android:id="@+id/last_nameEditText"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:textColorHint="@color/hint_color"
                android:textSize="14sp"
                android:ems="10"
                android:inputType="textPersonName|textCapSentences"
                android:hint="Last Name" />



            <EditText
                android:id="@+id/emailEditText"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:textColorHint="@color/hint_color"
                android:textSize="14sp"
                android:ems="10"
                android:inputType="textEmailAddress|textWebEmailAddress"
                android:hint="Email" />

            <EditText
                android:id="@+id/id_numberEditText"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:textColorHint="@color/hint_color"
                android:textSize="14sp"
                android:ems="10"
                android:inputType="number"
                android:hint="Id Number" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>